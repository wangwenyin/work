* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    min-width: 1200px;
    font-family: "SourceHanSansCN", "PingFang SC", "Microsoft YaHei", "Chinese Quote", "Helvetica Neue", sans-serif;
    color: #666;
    font-size: 14px;
}

a {
    color: #666;
    text-decoration: none;
}

input, textarea {
    outline: none;
}

fieldset,
img {
    border: 0
}

ol,
ul {
    list-style: none;
}


table {
    border-collapse: collapse;
}

hr {
    border-bottom: 1px solid #FFFFFF;
    border-top: 1px solid #E4E4E4;
    border-width: 1px 0;
    clear: both;
    height: 2px;
    margin: 5px 0;
    overflow: hidden;
}