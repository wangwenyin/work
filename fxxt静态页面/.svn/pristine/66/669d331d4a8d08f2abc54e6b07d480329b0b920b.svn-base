* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html, body {
    max-width: 750px;
    margin: 0 auto;
    height: 100%;
}

@media screen and (min-width: 750px) {
    html {
        font-size: 100px !important;
    }
}

html, body {
    width: 100%;
    height: 100%;
}

body {
    font-family: "PingFang SC", "SourceHanSansCN", "Microsoft YaHei", "Chinese Quote", "Helvetica Neue", sans-serif;
    color: #666;
    font-size: .3rem;
}

a {
    color: #666;
    text-decoration: none;
}

input, textarea {
    outline: none;
    border: none;
}

input::placeholder {
    color: #999;
    font: .28rem 'PingFang SC';
}

fieldset,
img {
    border: 0
}

ol,
ul {
    list-style: none;
}

table {
    text-align: center;
    border-collapse: collapse;
}

hr {
    border-bottom: 1px solid #FFFFFF;
    border-top: 1px solid #E4E4E4;
    border-width: 1px 0;
    clear: both;
    height: 2px;
    margin: 5px 0;
    overflow: hidden;
}

.clearfix::after {
    display: block;
    content: '';
    clear: both;
}

// 公共tabbar
.tabbar {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    height: .98rem;
    background-color: #fff;
    box-shadow:0px -1px 0px 0px rgba(140,78,127,1);
    .tab {
        flex: 1;
        height: 100%;
        display: flex;
        padding-top: .12rem;
        flex-direction: column;
        align-items: center;
        .text {
            margin-top: .02rem;
            font-size: .22rem;
            color: #999;
        }
        &:first-child {
            img {
                width: .42rem;
                height: .46rem;
            }
        }
        &:last-child {
            img {
                width: .48rem;
                height: .43rem;
            }
        }
        &.active {
            .text {
                color: #8C4E7F;
            }
        }
    }
}

// 通用列表
.common-list {
    margin-top: 1.68rem;
    padding-bottom: .98rem;
    .list-item {
        background-color: #fff;
        margin-top: .2rem;
        padding: .2rem;
        &:first-child {
            margin-top: 0;
        }
        .top {
            display: flex;
            justify-content: space-between;
            span {
                &:first-child {
                    color: #333;
                    font-size: .32rem;
                    font-weight: bold;
                }
                &:last-child {
                    color: #999;
                    font-size: .26rem;
                }
            }
        }
        .bottom {
            display: flex;
            justify-content: space-between;
            margin-top: .18rem;
            .right-info {
                .tag {
                   display: inline-block;
                   vertical-align: middle;
                   height: .28rem;
                   line-height: .28rem;
                   padding: 0 .04rem;
                   margin-right: .09rem;
                   font-size: .2rem;
                   color: #F3732E;
                   background:rgba(255,247,242,1);
                   border:1px solid rgba(243,115,46,1);
                   border-radius:.02rem;
                   .text {
                       display: inline-block;
                       transform: scale(.8);
                   }
                } 
                .info {
                    color: #999;
                    font-size: .26rem;
                    .value {
                        color: #F3732E;
                        font-size: .3rem;
                        font-weight: bold;
                    }
                }
            }
        }
    }
}