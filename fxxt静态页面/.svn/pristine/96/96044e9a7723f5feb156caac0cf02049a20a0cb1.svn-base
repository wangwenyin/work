header {
    display: flex;
    align-items: center;
    width: 100%;
    height:3.65rem;
    background: url(../images/header-bg.png) no-repeat center/cover;
    h1 {
        color: #fff;
        font-size: .5rem;
        padding-left: 1.05rem;
        letter-spacing: 2px;
    }
}
.login-box {
    width: 85%;
    margin: .95rem auto 0;
    overflow: hidden;
    .input-box {
        position: relative;
        margin-top: .54rem;
        input {
            width: 100%;
            height: .66rem;
            color: #333;
            font-size: .3rem;
            padding-left: 1rem;
            padding-right: 26%;
            border-bottom: 1px solid #ccc;
            &::placeholder {
                font: .28rem 'PingFang SC';
            }
        }
        .icon {
            position: absolute;
            left: .2rem;
            top: 50%;
            transform: translateY(-50%);
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
            &.user {
                width: .44rem;
                height: .42rem;
                background-image: url(../images/user.png);
            }
            &.pwd {
                left: .22rem;
                width: .40rem;
                height: .44rem;
                background-image: url(../images/pwd.png);
            }
        }
        .getcode {
            position: absolute;
            top: 0;
            right: 0;
            width: 26%;
            height: 100%;
            line-height: .66rem;
            text-align: right;
            color: #8C4E7F;
            &::before {
                position: absolute;
                left: 0;
                top: 50%;
                transform: translateY(-50%);
                content: '';
                width:1px;
                height:.28rem;
                background:#ccc;
            }
        }
    }
    .login-btn {
        height:.88rem;
        margin-top: .8rem;
        line-height: .88rem;
        text-align: center;
        font-size: .32rem;
        font-weight: bold;
        color: #fff;
        background:rgba(140,78,127,1);
        border-radius:.44rem;
    }
}
footer {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: .68rem;
    line-height: .68rem;
    text-align: center;
    font-size: .26rem;
    font-weight: 500;
    color: #707070;
}